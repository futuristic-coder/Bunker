<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3> <%= listing.title %> </h3>
    </div>
    <div class="card col-6 offset-3 listing-card">
        <img src="<%= listing.image%>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
            <p class="card-text">
                <i> Owned by: <%= listing.owner.username %></i>
            </p>
            <p class="card-text">
                <%= listing.description %>
            </p>
            <p class="card-text">
                &#8377; <%= listing.price.toLocaleString("en-IN")%> <br>
            </p>
            <p class="card-text">
                <%= listing.location %>
            </p>
            <p class="card-text">
                <%= listing.country %> <br>
            </p>
        </div>  
    </div>

    <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3">Edit</a>
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                <button class="btn btn-dark offset-5">Delete</button>
            </form>
        </div>
    <% } %>

    <div class="col-8 offset-3  mb-2">
        <hr>
        <% if(currUser) { %>
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing._id %>/review" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div>
                <div class="mb-3">
                    <label for="comment"  class="form-label">Comments</label>
                    <textarea id="comment" name="review[comment]" rows="4" cols="50"  class="form-control" required></textarea>
                    <div class="invalid-feedback">Give add some comments for review</div>
                </div>
                <button type="submit" class="btn btn-dark mt-1">Submit</button>
            </form>
            <hr />
        <% } %>
        

        <p><b>All Reviews</b></p>
        <div class="row">
            <% for(review of listing.reviews) { %>
                <div class="card  col-5 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@<%= review.author.username %></h5>
                        <p class="card-text"><%= review.comment %></p>
                        <p class="card-subtitle mb-2 text-muted">Rating: <%= review.rating %> Stars</p>
                    </div>
                    <% if (currUser && currUser._id.equals(review.author._id)) { %>
                        <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/review/<%= review._id %>?_method=DELETE">
                          <button class="btn btn-sm btn-outline-danger">Delete Review</button>
                        </form>
                    <% } %>
                </div>
            <% } %> 
        </div> 
    </div>
</div>